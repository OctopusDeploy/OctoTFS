{
    "id": "d05ad9a2-5d9e-4a1c-a887-14034334d6f2",
    "name": "OctopusPush",
    "friendlyName": "Push Package(s) to Octopus",
    "description": "Push your NuGet or Zip package to your Octopus Deploy Server",
    "helpMarkDown": "set-by-pack.ps1",
    "category": "Package",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Octopus Deploy",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 0
    },
    "demands": [],
    "minimumAgentVersion": "2.115.0",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced Options",
            "isExpanded": false
        },
        {
            "name": "spaces",
            "displayName": "",
            "isExpanded": true,
            "visibleRule": "HasSpaces = true"
        }
    ],
    "inputs": [
        {
            "name": "OctoConnectedServiceName",
            "type": "connectedService:OctopusEndpoint",
            "label": "Octopus Deploy Server",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Octopus Deploy server connection"
        },
        {
            "name": "HasSpaces",
            "type": "boolean",
            "label": "Octopus Server has Spaces?",
            "defaultValue": "false",
            "required": true,
            "helpMarkDown": "Octopus Server 2019.1+ supports spaces"
        },
        {
            "name": "SpaceId",
            "type": "pickList",
            "label": "Space",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "The space name within Octopus. You can leave this blank to use the default space.",
            "groupName" : "spaces"
        },
        {
            "name": "Package",
            "type": "multiLine",
            "label": "Package",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Package file to push. To push multiple packages, enter on multiple lines."
        },
        {
            "name": "Replace",
            "type": "boolean",
            "label": "Replace Existing",
            "defaultValue": "False",
            "required": true,
            "helpMarkDown": "If the package already exists in the repository, the default behavior is to reject the new package being pushed. Set this flag to 'True' to overwrite the existing package."
        },
        {
            "name": "AdditionalArguments",
            "type": "string",
            "label": "Additional Arguments",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Additional arguments to be supplied to Octo.exe. See [Octo.exe Command Line documentation](http://docs.octopusdeploy.com/display/OD/Pushing+packages) for available parameters.",
            "groupName": "advanced"
        }
    ],
    "dataSourceBindings": [
        {
            "target": "SpaceId",
            "endpointId": "$(OctoConnectedServiceName)",
            "dataSourceName": "OctopusAllSpaces",
            "resultTemplate": "{\"Value\":\"{{{Id}}}\",\"DisplayValue\":\"{{{Name}}}\"}"
        }
    ],
    "instanceNameFormat": "Push Packages to Octopus",
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}
